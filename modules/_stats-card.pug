//- Modules :: Stats-card
//-------------------------------------------------------

mixin stats-card({title, count, badge, progress, icon})
  .col-lg-6.col-12.col-xl
    .card.card-stats
      .card-body
        .row.align-items-center
          .col
            h4.card-title.text-uppercase.text-muted.mb-2= title

            .row.align-items-center.no-gutters
              span.card-count= count
              if badge
                span.badge.badge--soft-success= badge
              if progress
                .progress.col
                  .progress-bar(role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100") 
             
          .col-auto
            span.card-icon.text-muted.mb-0(class= icon)