mixin main-menu()
  ul.navbar-nav
    each item in menus
      li.navbar-item.js-navbar-item(
        class=item.submenu ? 'navbar-item--has-children' : '', 
        class=item.active ? 'active' : ''
      )
        a.navbar-link.js-navbar-link(
          href= item.href ? item.href : "#", 
          data-toggle= item.toggle ? "modal" : "collapse", 
          role ="button", 
          aria-expanded ="false", 
          aria-controls= item.id
        )
          i(class= item.icon)
          |#{item.title}
          
        if item.submenu
          .collapse(id= item.id)
          ul.nav.nav-sm.flex-column.js-submenu
            each sub in item.submenu
              li.nav-item.js-sub-item(
                class=sub.childmenu ? 'navbar-item--has-children' : '',
                class= sub.active ? 'active' : ''
              )
                a.nav-link(
                  href= item.href ? item.href : "#", 
                  data-toggle= "collapse", 
                  role ="button", 
                  aria-expanded ="false", 
                  aria-controls= item.id
                )= sub.title

                if sub.childmenu
                  .collapse(id= sub.id)
                    ul.nav.nav-sm.flex-column.js-submenu
                      each child in sub.childmenu
                        li.nav-item.js-sub-item(
                          class= child.active ? 'active' : ''
                        )
                          a.nav-link(
                            href= item.href ? item.href : "#", 
                          )= child.title
                          
                                                    